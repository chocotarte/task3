<div class="container px-5 px-sm-0">
  <% if @newbook.errors.any? %>
    <h2><%= @newbook.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="row">

    <%= render partial: "users/info", locals: {user: @user, newbook: @newbook} %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td> <%= link_to user_path(@book.user_id) do %><%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %><% end %> </td>
            <td> <%= link_to book_path(params[:id]) do %><%= @book.title %><% end %> </td>
            <td> <%= @book.body %> </td>

            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destory", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>

          </tr>
        </tbody>
      </table>

    </div>

  </div>
</div>