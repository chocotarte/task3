
<div class="container px-5 px-sm-0">
  <% if @newbook.errors.any? %>
    <h2><%= @newbook.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  
  <div class="row">
    
    <%= render partial: "users/info", locals: {user: @user, newbook: @newbook} %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% if not @books.blank? %>
            <% @books.each do |book| %>
              <tr>
                <td> <%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(80, 80) %><% end %> </td>
                <td> <%= link_to book_path(params[:id]) do %><%= book.title %><% end %> </td>
                <td> <%= book.body %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
        
      </table>
      
    </div>
  
  </div>
</div>